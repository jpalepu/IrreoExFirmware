<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IrreoExFirmware.DisplayConfig"
             Title="DisplayConfig">

    <VerticalStackLayout Padding="10">

        <Image Source="irreo.png" MaximumWidthRequest="250"
               HorizontalOptions="Center"/>

        <Label Text="Firmware Shipment Process" TextColor="White" FontSize="Medium" VerticalTextAlignment="Center" HorizontalOptions="Center" />

        <HorizontalStackLayout Padding="30" Spacing="50">


            <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">

                <StackLayout HorizontalOptions="Center">
                    <HorizontalStackLayout>
                        <VerticalStackLayout VerticalOptions="CenterAndExpand" >
                            <FlexLayout Direction="Column" AlignContent="SpaceBetween">
                                <RadioButton Margin="0,10,0,0" CheckedChanged="RadioBtnSelectVersion" Content="Edge Com Lora L2" />
                                <RadioButton CheckedChanged="RadioBtnSelectVersion" Content="Edge Com Lora L8" />
                                <RadioButton CheckedChanged="RadioBtnSelectVersion" Content="Edge Com Lora L16"/>
                                <RadioButton CheckedChanged="RadioBtnSelectVersion" Content="Edge Com Lora Meteo" />
                            </FlexLayout>
                        </VerticalStackLayout>
                        
                        <VerticalStackLayout Padding="50, 0" VerticalOptions="Center">
                            <Picker x:Name="pickerRev" 
                                Title="Rev" 
                                BackgroundColor="Grey" 
                                SelectedIndexChanged="OnPickerRevSelected" 
                                HorizontalOptions="Start"
                                SelectedIndex="0">

                                <Picker.ItemsSource>
                                    <x:Array Type="{x:Type x:String}">
                                        <x:String>Rev17</x:String>
                                        <x:String>Rev18</x:String>
                                    </x:Array>
                                </Picker.ItemsSource>

                            </Picker>

                            <Picker x:Name="pickerVersion" Title="Version"
                                BackgroundColor="Grey" 
                                SelectedIndexChanged="OnPickerVersionSelected" 
                                ItemDisplayBinding ="{Binding Name}"
                                HorizontalOptions="Start" />

                            <Picker x:Name="pickerCOM" Title="COM"
                                BackgroundColor="Grey" 
                                ItemDisplayBinding="{Binding Name}"
                                SelectedIndexChanged="OnPickerCOMSelected" 
                                HorizontalOptions="Start" />
                            
                        </VerticalStackLayout>
                    </HorizontalStackLayout>
                    <HorizontalStackLayout Padding="30" Spacing="10">
                        
                        <Button x:Name="FlashBtn" Text="Flash Firmware" BackgroundColor="Teal" Clicked="FlashFirmwareBtn" Padding="10" WidthRequest="250" IsEnabled="False"/>
                        <Label x:Name="FlashPercentage" Text="0%" Padding="10" FontSize="Medium" />
                        
                    </HorizontalStackLayout>
                    <Slider Minimum="0" Maximum="100" ValueChanged="Slider_OnValueChanged"/>
                </StackLayout>

            </VerticalStackLayout>


            <VerticalStackLayout Padding="20" Spacing="20" VerticalOptions="Center">

            <StackLayout Padding="15" Spacing="10">

                    <Entry x:Name="entry2"
                           Placeholder="DEVICE INFO DISPLAY"
                           TextChanged="OnEntryTextChanged"
                           Completed="OnEntryCompleted" />

                    <Button Text="Device Info" 
                            BackgroundColor="Teal" 
                            Clicked="GetDeviceInfo" 
                            Padding="10" 
                            WidthRequest="200"/>

                    <Entry  x:Name="entry"
                            Placeholder="Enter Device UID (16 Digits) to register"
                            TextChanged="OnEntryTextChanged"
                            Completed="OnEntryCompleted" 
                            MaxLength="16"/>

                    <Button x:Name="Register" 
                            Text="Register" 
                            
                            BackgroundColor="Teal" 
                            Clicked="RegisterDeviceBtn" 
                            Padding="5" 
                            WidthRequest="200"/>

                </StackLayout>


                <HorizontalStackLayout Spacing="40">


                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="35">

                    <Button Text="Test device" 
                        BackgroundColor="Teal" 
                        Clicked="FlashFirmwareBtn" 
                        Padding="5" WidthRequest="180" HorizontalOptions="Start"/>

                    <Label x:Name="TestResults" Text="Test Passed/Failed!!" TextColor="Green" Padding="10" FontSize="Medium" />
                    
                    
                </HorizontalStackLayout>


            </VerticalStackLayout>

         </HorizontalStackLayout>

    </VerticalStackLayout>

</ContentPage>
    
    